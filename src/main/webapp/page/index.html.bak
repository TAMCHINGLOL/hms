	<script type="text/javascript">
		//询问是否退出系统
		function exitSystem() {
			var flag = confirm("真的要退出系统吗？");
			if (flag)
				window.location = "userController_logout.html";
		}

		function showDivChangePassword() {
			$("#passDiv").window({
				title: "修改密码",
				width: 550,
				height: 250,
				modal: true,
				minimizable: false,
				href: "changePassUI.jsp"
			});
		}
	</script>
	<script type="text/javascript">
		/*
		*	通过点击超链接，添加选项页
		*	title选项页标题
		*   href内容链接url
		*/
		function addTabs(title, href) {
			var tab = $("#divtabs");
			//判断选项页是否存在
			if (tab.tabs('exists', title)) {
				tab.tabs('select', title);
				return;
			}
			var content;
			if (href) {
				content = "<iframe src='" + href + "' style='width:100%;height:100%'></iframe>";
			} else {
				content = "该功能尚在开发中....";
			}
			//添加新选项页
			tab.tabs('add', {
				title: title,
				content: content,
				closable: true
			});
		}
	</script>
</head>

